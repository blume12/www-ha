{% extends "layout.html.twig" %}
{% block headline %}
    <h1>Textvorlagen</h1>
{% endblock %}

{% block content %}

    <p>
        Hier können Sie alle Textvorlagen bearbeiten und ansehen.
    </p>

    <a href="{{ newEntryRoute }}">Neuen Eintrag anlegen</a>

    {% if textSourceData %}

        <ul class="backendList text">
            <li class="head"><span class="titleStatus">Titel</span><span class="row options">Optionen</span></li>
            {% for textSource in textSourceData %}
                <li class="{% if textSource.index is divisible by(2) %}firstLine{% else %}secondLine{% endif %}">
                    <span class="status">
                        {% if textSource.status == "active" %}
                            <img src="/images/backend/status-confirm.png"/>
                        {% else %}
                            &nbsp;
                        {% endif %}
                    </span>
                    {% if textSource.status == "active" %}
                    <span class="titleText">
                        {{ textSource.title }}
                    </span>
                    {% else %}
                        <span class="titleText spaceStatus">
                        {{ textSource.title }}
                    </span>
                    {% endif %}
                    <span class="row options">
                        <a href="{{ textSource.editRoute }}">bearbeiten</a>&nbsp;
                        <a href="{{ textSource.deleteRoute }}">löschen</a>
                    </span>
                </li>
            {% endfor %}
        </ul>
    {% else %}
        <p>
            Es liegen keine Textvorlagen vor.
        </p>
    {% endif %}
{% endblock %}
