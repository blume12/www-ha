{% extends "layout.html.twig" %}
{% block content %}
    <h1>Programme</h1>

    <p>
        Hier finden Sie alle Programme.
    </p>

    <a href="{{ newEntryRoute }}">Neuen Eintrag anlegen</a>

    {% if programData %}

        <ul class="backendList">
            <li class="head">Titel<span class="row options">Optionen</span></li>
            {% for program in programData %}
                <li class="{% if program.index is divisible by(2) %}firstLine{% else %}secondLine{% endif %}">
                    {{ program.title }}
                    <span class="row options">
                    <a href="{{ program.editRoute }}">bearbeiten</a>&nbsp;
                    <a href="{{ program.deleteRoute }}">l√∂schen</a>
                </span>
                </li>
            {% endfor %}
        </ul>
    {% else %}
        <p>
            Es liegen keine Programme vor.
        </p>
    {% endif %}
{% endblock %}
