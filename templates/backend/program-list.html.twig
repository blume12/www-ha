{% extends "layout.html.twig" %}
{% block headline %}
    <h1>Programme</h1>
{% endblock %}

{% block content %}

    <p>
        Hier finden Sie alle Programme.
    </p>

    <a href="{{ newEntryRoute }}">Neuen Eintrag anlegen</a>

    {% if programData %}

        <ul class="backendList">
            <li class="head">Titel<span class="row options large">Optionen</span></li>
            {% for program in programData %}
                <li class="{% if program.index is divisible by(2) %}firstLine{% else %}secondLine{% endif %}
                            {% if program.PPId  == '' %} error{% endif %} large">
                    {% if program.PPId  == '' %}<img src="/images/backend/warning.png" alt="Warnung"/> {% endif %}
                    <span class="titleText small">
                        {{ program.title }}
                    </span>
                    <span class="row options large">
                    <a href="{{ program.programListRoute }}">Reservierungen</a>&nbsp;
                    <a href="{{ program.editRoute }}">bearbeiten</a>&nbsp;
                    <a href="{{ program.deleteRoute }}">l√∂schen</a>
                </span>
                </li>
            {% endfor %}
        </ul>
    {% else %}
        <p>
            Es liegen keine Programme vor.
        </p>
    {% endif %}
{% endblock %}
