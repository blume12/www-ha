{% extends "layout.html.twig" %}
{% block content %}
    <h1>Programm {% if  newEntry %}anlegen {% else %}bearbeiten{% endif %}</h1>

    {% include "error-message.html.twig" %}

    {# TODO: complete the formular with correct data #}
    <form action="{{ formAction }}" method="post" name="formComment">
        <label for="title" {% if errorData.title %} class="error"{% endif %}>Titel: </label>
        <input id="title" type="text" size="20" name="title" value="{{ formData.title }}"
               class="width65{% if errorData.title %} error{% endif %}"/>

        <label for="intro" class="{% if errorData.intro %}error{% endif %}">Intro:</label>
        <input id="intro" type="text" size="20" name="intro" value="{{ formData.intro }}"
               class="width65{% if errorData.intro %} error{% endif %}"/>

        <label for="price" class="{% if errorData.price %}error{% endif %}">Preis:</label>
        <select id="price" name="price" class="{% if errorData.price %}error{% endif %}">
            <option value="notset" {% if formData.price == "notset" %} selected="selected" {% endif %}>
                -- Bitte w√§hlen Sie einen Preis aus --
            </option>
            {% for key, price in formData.priceData %}
                <option value="{{ key }}" {% if formData.price == key %} selected="selected" {% endif %}>
                    {{ price.name }}
                    : {{ price.price }} ({{ price.priceReduce }})
                </option>
            {% endfor %}
        </select>

        <label for="text" class="{% if errorData.text %}error{% endif %}">Text: </label>
        <textarea id="text" name="text" rows="10"
                  class="{% if errorData.text %}error{% endif %}">{{ formData.text }}</textarea>
        <div class="clear"></div>
        <input name="send" type="submit" value="Speichern">
    </form>
{% endblock %}
