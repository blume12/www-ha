{% extends "layout.html.twig" %}
{% block headline %}
    <h1>Preise</h1>
{% endblock %}
{% block content %}

    <p>
        Hier können Sie die Preise festlegen.
    </p>

    <a href="{{ newEntryRoute }}">Neuen Eintrag anlegen</a>

    {% if programPriceData %}

        <ul class="backendList">
            <li class="head">Jahr<span class="row options">Optionen</span></li>
            {% for programPrice in programPriceData %}
                <li class="{% if programPrice.index is divisible by(2) %}firstLine{% else %}secondLine{% endif %}">
                    <span class="titleText">
                    <strong>{{ programPrice.name }}</strong>: {{ programPrice.price }} (Reduzierter
                    Preis: {{ programPrice.priceReduce }})
                    </span>
                    <span class="row options">
                        <a href="{{ programPrice.editRoute }}">bearbeiten</a>&nbsp;
                        <a href="{{ programPrice.deleteRoute }}">löschen</a>
                    </span>
                </li>
            {% endfor %}
        </ul>
    {% else %}
        <p>
            Es liegen keine Preise vor.
        </p>
    {% endif %}

{% endblock %}