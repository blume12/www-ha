<html>
<head>
    <title>{% block title %}{{ pageTitle }}{% endblock %} | Ticketsystem</title>
    <meta charset="utf-8"/>
    <link rel="stylesheet" href="/css/layout.css">
    <link rel="stylesheet" href="/css/backend.css">
    <link href="https://fonts.googleapis.com/css?family=Lato:300,400,700" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=PT+Serif:400,400i,700" rel="stylesheet">
    {% for file in javascriptFiles %}
        <script type="application/javascript" src="{{ file }}"></script>
    {% endfor %}
</head>
<body>
<div class="container">
    <nav>
        <div class="logo">
            <img src="/images/Logo.png" alt="Logo der Flensburger Kurzfilmtage"/>
            <span class="schriftLogo">Flensburger<br> Kurzfilmtage</span>
            <span class="mobile">Men√º</span>
        </div>

        <ul class="menu">
            {% for menu in menuData %}
                {% if loggedIn or menu.showAlways %}
                    <li><a href="{{ menu.route }}">{{ menu.name }}</a></li>
                {% endif %}
            {% endfor %}
        </ul>
    </nav>

    <div class="filmStripeTop">
        <img class="imgLarge" src="/images/FilmStripeOrangeLarge.png" alt="Filmstreifen Dekoelement"/>
        <img class="imgSmall" src="/images/FilmStripeOrangeSmall.png" alt="Filmstreifen Dekoelement"/>
    </div>

    <div class="content">
        <div class="headline">
            {% block headline %}
            {% endblock %}
        </div>
        {% block content %}
        {% endblock %}
    </div>

    <div class="filmStripeDown">
        <img class="imgLarge" src="/images/FilmStripeGrayLarge.png" alt="Filmstreifen Dekoelement"/>
        <img class="imgSmall" src="/images/FilmStripeGraySmall.png" alt="Filmstreifen Dekoelement"/>
    </div>
    <footer>
        {% for menu in menuFooterData %}
            {% if loggedIn or menu.showAlways %}
                <span><a href="{{ menu.route }}">{{ menu.name }}</a></span>
            {% endif %}
        {% endfor %}
    </footer>
</div>
</body>
</html>